generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DeviceType {
  DESKTOP
  MOBILE
  TABLET
}

model User {
  id       String     @id @default(cuid())
  name     String?
  email    String?    @unique
  image    String?
  websites Websites[]
}

model Websites {
  id               Int               @id @default(autoincrement())
  website_name     String            @unique
  userId           String?
  visits           Visits[]
  page_views       PageViews[]
  device_analytics DeviceAnalytics[]
  createdAt        DateTime          @default(now())
  OsAnalyticsInfo  OsAnalyticsInfo?
  user             User?             @relation(fields: [userId], references: [id])
}

model Visits {
  id             Int      @id @default(autoincrement())
  website_name   String
  website_domain String
  source         String
  websites       Websites @relation(fields: [website_name], references: [website_name], onDelete: Cascade)
  createdAt      DateTime @default(now())
}

model PageViews {
  id           Int      @id @default(autoincrement())
  website_name String
  domain       String
  page         String
  websites     Websites @relation(fields: [website_name], references: [website_name], onDelete: Cascade)
  createdAt    DateTime @default(now())
}

model DeviceAnalytics {
  id           Int    @id @default(autoincrement())
  website_name String @unique

  deviceType DeviceType @unique
  visitor    Int        @default(0)

  websites  Websites @relation(fields: [website_name], references: [website_name], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model OsAnalyticsInfo {
  id           Int    @id @default(autoincrement())
  website_name String @unique

  os      String @unique
  visitor Int    @default(0)

  websites  Websites @relation(fields: [website_name], references: [website_name], onDelete: Cascade)
  createdAt DateTime @default(now())
}
